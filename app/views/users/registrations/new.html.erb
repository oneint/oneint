<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <% if !Rails.env.production? %>
                  <h1 class="h4 text-gray-900 mb-4">While we're in beta, registration is only by invite. Leave your email below to get an invite.</h1>
                <% else %>
                  <h1 class="h4 text-gray-900 mb-4">Create an account</h1>
                <% end %>
              </div>

              <% if !Rails.env.production? %>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'user'}) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-user', placeholder: "Enter Email Address..." %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :company_name, autocomplete: "Company name", class: 'form-control form-control-user', placeholder: "Enter Your Company Name..." %>
                  </div>

                <!--  <div class="field">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, autocomplete: "Company name" %>
                  </div>-->

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: "Enter Password..." %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: "Confirm Password..." %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Sign up", class: 'btn btn-primary btn-user btn-block' %>
                  </div>
                <% end %>
              <% else %>
                <%= form_with(model: EmailSubscriber.new, url: "/home/save_subscriber", class: 'user') do |f|%>
                  <div class="form-group">
                    <%= f.email_field :email, placeholder: "Enter your email...", class: 'form-control form-control-user' %>
                  <div>
                  <div class='actions'>
                    <%= f.submit "Join", class: 'btn btn-primary btn-user btn-block' %>
                  </div>
                  <div class='errors' style='display: none;'></div>
                <% end %>
              <% end %>
              <hr>
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
